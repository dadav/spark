## User privilege specification
##
root ALL=(ALL) ALL

%wheel ALL=(ALL) ALL

# Vagrant
{% if vagrant_testing == True %}
{{ user.name }} ALL=(ALL) NOPASSWD,SETENV:/usr/bin/pacman*
{% endif %}

{% for entry in passwordless_sudo %}
%wheel ALL=(ALL) NOPASSWD,SETENV:{{ entry }}
{% endfor %}

# This is not a comment
#includedir /etc/sudoers.d
